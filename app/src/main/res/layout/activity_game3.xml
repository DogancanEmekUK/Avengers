<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#DADADA"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GameActivity3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/avengers">

    </ImageView>

    <TextView
        android:id="@+id/fightText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/avenge"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/black">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="103dp"
            android:fontFamily="@font/avenge"
            android:gravity="center"
            android:text="Time : 20"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="63dp"
            android:layout_toRightOf="@+id/timeText"
            android:fontFamily="@font/avenge"
            android:gravity="center"
            android:text="Score : 0"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_marginLeft="1dp"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/image1"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/image2"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/image3"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image5"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@+id/image1"
            android:layout_marginLeft="1dp"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image6"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image2"
            android:layout_toRightOf="@+id/image5"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image7"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image3"
            android:layout_toRightOf="@+id/image6"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image8"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image4"
            android:layout_toRightOf="@+id/image7"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image9"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image5"
            android:layout_marginLeft="1dp"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image10"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image6"
            android:layout_toRightOf="@+id/image9"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image11"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image7"
            android:layout_toRightOf="@+id/image10"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image12"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image8"
            android:layout_toRightOf="@+id/image11"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image13"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image9"
            android:layout_marginLeft="1dp"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image14"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image10"
            android:layout_toRightOf="@+id/image13"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image15"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image11"
            android:layout_toRightOf="@+id/image14"
            android:onClick="increaseScore">

        </ImageView>

        <ImageView
            android:id="@+id/image16"
            android:layout_width="102dp"
            android:layout_height="90dp"
            android:layout_below="@id/image12"
            android:layout_toRightOf="@+id/image15"
            android:onClick="increaseScore">

        </ImageView>

    </RelativeLayout>

</LinearLayout>